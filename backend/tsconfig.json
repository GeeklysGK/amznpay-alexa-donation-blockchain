{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "build/dist",
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "es2018",
      "DOM"
    ],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build"
  ]
}
